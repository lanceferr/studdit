<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Studdit Forum - {{subject.name}}</title>
    <link rel="stylesheet" href="../css/subject.css">
</head>
<body>
    <!-- Navbar -->
    <header class="navbar">
        <a href="/" class="logo">
            <h1>studdit</h1>
        </a>
        <nav>
            <input type="text" id="search" placeholder="Search threads...">
            <a href="subjects.hbs">Subjects</a> 
            <a href="create-thread.hbs">Create</a>
            <a href="login.hbs">Login</a>
        </nav>
    </header>

    <!-- Main Content -->
    <main>
        <section class="posts">
            {{#each posts}}
            <article class="post">
                <div class="post-info">
                    <h2 class="post-title"><a href="/thread/{{this._id}}">{{this.title}}</a></h2>
                    <p class="post-author"><a href="/profile/{{this.author._id}}">Posted by u/{{this.author.username}}</a></p>
                </div>
                <div class="post-subinfo">
                    <p>in r/{{subject.name}}, {{this.date}}</p>
                </div>
                <div class="post-content">
                    <p>{{this.content}}</p>
                </div>
                <div class="post-interactions">
                    <button data-post-number="{{this._id}}">üëç {{this.upvotes}}</button>
                    <button data-post-number="{{this._id}}">üí¨ {{this.comments.length}} Comments</button>
                </div>
            </article>
            {{/each}}
        </section>

        <aside class="sidebar">
            <h3>r/{{subject.name}}</h3>
            <p>{{subject.description}}</p>
            <hr>
            Sort posts by: 
            <select id="sort">
                <option value="date">Date Posted</option>
                <option value="rating">Top Rated</option>
                <option value="comments">Most Commented</option>
            </select>
        </aside>
    </main>

    <footer>
        <p>studdit - All Rights Reserved</p>
    </footer>

    <script src="/js/script.js"></script>
</body>
</html>
