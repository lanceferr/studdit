<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile Page</title>

    <link rel="stylesheet" href="/css/profile.css">
    <link rel="stylesheet" href="/css/main-header.css">
    <style>
        article.post {
            width: 95%;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <header class="navbar">
        <a href="/" class="logo">
            <h1>studdit</h1>
        </a>
        <nav>
            <a href="/about" style="font-size:70%">About Us</a>
            <form id="form-search"><input type="text" id="search" placeholder="Search threads..."></form>
            {{#if user}}
            <a href="/create-thread" id="create-thread-link">Create</a>
            <a href="/logout">Logout</a>
            {{else}}
            <!-- Show Login if user is not logged in -->
            <a href="/login" id="login-link">Login</a>
            {{/if}}
        </nav>
    </header>

    <!-- Sidenav -->
    <div class="sidenav">
        <div class="profile">
            <img src="{{avatar}}" alt="Profile Picture" width="100" height="100">

            <div class="name">
                {{username}}
            </div>
            <div class="course">
                {{course}}
            </div>
        </div>
    </div>
    <!-- End -->

    <!-- Main -->
    <div class="main">
        <h2>Profile</h2>
        <div class="card">
            <div class="card-body">
                <i class="fa fa-pen fa-xs edit"></i>
                <table>
                    <tbody>
                        <tr>
                            <td>Name</td>
                            <td>:</td>
                            <td>{{username}}</td>
                        </tr>
                        <tr>
                            <td>Email</td>
                            <td>:</td>
                            <td>{{email}}</td>
                        </tr>
                        <tr>
                            <td>Bio</td>
                            <td>:</td>
                            <td>{{bio}}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <h2>Recent Posts and Comments</h2>
        <div class="card">
            <div class="card-body">
                <section class="posts">
                    {{#if hasPosts}}
                        {{#each posts}}
                        <article class="post">
                            <div class="post-info">
                                <h2 class="post-title"><a href="/thread/{{this._id}}">{{this.title}}</a></h2>
                            </div>
                            <div class="post-subinfo">
                                <p>in <a href="/subjects/r/{{this.subject.name}}">r/{{this.subject.name}}</a>, {{this.date}}</p>
                            </div>
                            <div class="post-content">
                                <p>{{content}}</p>
                            </div>
                            <div class="post-interactions">
                                {{#if ../user}}
                                <button data-post-id="{{this._id}}" class="like-button">üëç {{this.likes}}</button>
                                {{/if}}
                                <a href="/thread/{{this._id}}">
                                    <button data-post-number="{{this._id}}">üí¨ {{this.comments.length}} Comments</button>
                                </a>
                            </div>
                        </article>
                        {{/each}}
                    {{else}}
                        <p style="text-align: center; color: gray;">No posts available</p>
                    {{/if}}
                </section>
            </div>
        </div>
    </div>
    <!-- End -->

    <footer>
        <p>studdit - All Rights Reserved</p>
    </footer>

    <script src="/js/script.js"></script>
</body>
</html>