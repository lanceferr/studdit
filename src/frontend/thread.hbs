<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Studdit Forum - Thread</title>
    <link rel="stylesheet" href="css/thread.css">
</head>
<body>
    <!-- Navbar -->
    <header class="navbar">
        <a href="studdit-main.html" class="logo">
            <h1>studdit</h1>
        </a>
        <nav>
            <input type="text" id="search" placeholder="Search threads...">
            <a href="subject.hbs">Subjects</a> 
            <a href="create-thread.hbs">Create</a>
            <a href="login.hbs">Login</a>
        </nav>
    </header>

    <main>
        <section class="posts">
            {{#each posts}}
            <article class="post">
                <div class="post-info">
                    <h2 class="post-title">{{this.title}}</h2>
                    <p class="post-author">
                        <a href="/profile/{{this.author._id}}">Posted by u/{{this.author.username}}</a>
                    </p>
                </div>

                <div class="post-subinfo">
                    <p>in <a href="/subject/{{this.subject._id}}">r/{{this.subject.name}}</a>, {{this.date}}</p>
                </div>

                <div class="post-content">
                    <p>{{this.content}}</p>
                </div>

                <div class="post-interactions">
                    <button>üëç {{this.likes}}</button>
                </div>

                {{!-- Comments Section --}}
                <div class="comments">
                    <h3>Comments</h3>
                    <div class="comment-box">
                        <textarea id="comment-input" placeholder="What are your thoughts?"></textarea>
                        <button onclick="addComment('{{this._id}}')">Comment</button>
                    </div>
                    <ul class="comment-list">
                        {{#each this.comments}}
                        <li class="comment">
                            <p class="comment-author">
                                <a href="/profile/{{this.author._id}}">u/{{this.author.username}}</a>
                            </p>
                            <p class="comment-content">{{this.content}}</p>
                        </li>
                        {{/each}}
                    </ul>
                </div>
            </article>
            {{/each}}
        </section>
    </main>


    <script src="js/scripts.js"></script>
</body>
</html>